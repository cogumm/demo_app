<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= render 'layouts/javascripts' %>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="#mtai" show_faces="false" width="450"></fb:like>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>

