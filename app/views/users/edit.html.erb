<h1><%= translate "helpers.legend.edit_user" %></h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="fields">
    <div class="field">
      <%= gravatar_for @user %><br />
      <a href="http://gravatar.com/emails" target="_blank">mudar</a>
    </div>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, translate("activerecord.attributes.user.confirmation") %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit translate("helpers.legend.update") %>
  </div>
<% end %>

